{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": ".",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": [
    "server.ts",
    "routes/**/*.ts",
    "controllers/**/*.ts",
    "models/**/*.ts",
    "services/**/*.ts",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
